      <script>
        const allPosts = [
        {
            title: "Aster Hospital",
            imageUrl: "Aster Hospital.png",
            redirectUrl: "https://www.asterhospitals.in/doctors/hospital/aster-cmi-bangalore-2146"
        },
        {
            title: "BMS Hospital",
            imageUrl: "BMS Hospital.png",
            redirectUrl: "#"
        },
        {
            title: "Green City Hospital",
            imageUrl: "Green City Hospital.png",
            redirectUrl: "https://greencityhospitals.com/doctors/"
        },
        {
            title: "Nethradhama Hospital",
            imageUrl: "Nethradhama Hospital.png",
            redirectUrl: "https://nethradhama.org/our-teams/"
        },
        {
            title: "Maiya Hospital",
            imageUrl: "Maiya Hospital.png",
            redirectUrl: "https://maiyahospital.in/our-doctors/"
        },
        {
            title: "Homeocare International Hospital",
            imageUrl: "Homeocare International Hospital.png",
            redirectUrl: "https://www.homeocareautoimmunediseases.com/index.html"
        },
        // Add redirectUrl for each post
    ];
    
    const searchIcon = document.querySelector("header.main-header .search-icon");
    const searchResults = document.querySelector(
        "header.main-header .search-results"
    );
    const searchInput = document.querySelector(".search-results .search-input");
    const searchTitle = document.querySelector(".search-results .search-title");
    const resultsContainer = document.querySelector(".results-container");
    
    let filteredPosts = [];
    
    searchIcon.addEventListener("click", () => {
        searchResults.classList.toggle("active");
    });
    
    const populateSearchResults = () => {
        const ul = document.createElement("ul");

        filteredPosts.forEach((p) => {
            const li = document.createElement("li");
            const container = document.createElement("div"); // Container for image and text
            const img = document.createElement("img");
            const textContent = document.createElement("span");
            const al1 = document.createElement("sup");
            const al2 = document.createElement("sup");
            const al3 = document.createElement("sup");
            const al4 = document.createElement("sup");
            const al5 = document.createElement("sup");

            img.src = p.imageUrl;
            img.alt = p.title;
            img.style.width = "120px"; // Adjust the width of the image as needed
            img.style.height = "90px"; // Adjust the height of the image as needed
            img.style.borderRadius = "10px"; // Adjust the border radius as needed

            textContent.textContent = p.title; // Set text content to the title of the post
            textContent.style.marginLeft = "20px"; // Adjust the margin as needed
            textContent.style.fontSize = "14px"; // Adjust the font size as needed
            textContent.style.cursor = "pointer"; // Set cursor to pointer to indicate clickable

            // Add click event listener to the list item
            li.addEventListener("click", () => {
                // Redirect to the corresponding webpage when clicked
                window.location.href = p.redirectUrl;
            });

            container.appendChild(img); // Append image to container
            // container.appendChild(textContent); // Append text content to container
            container.appendChild(al1); // Append text content to container
            al1.appendChild(al2); 
            al2.appendChild(al3); 
            al3.appendChild(al4); 
            al4.appendChild(al5); 
            al5.appendChild(textContent); 


            li.appendChild(container); // Append container to list item
            ul.appendChild(li); // Append list item to unordered list
        });

        resultsContainer.innerHTML = ""; // Clear existing content
        resultsContainer.appendChild(ul); // Append unordered list to results container
    };

    
    
    
    
    searchInput.addEventListener("input", (e) => {
        const query = e.target.value.toLowerCase();
    
        if (query) {
        filteredPosts = allPosts.filter((post) => {
            const title = post.title.toLowerCase();
            return title.includes(query);
        });
    
        populateSearchResults();
        searchTitle.textContent = "Search Results";
        } else {
        searchTitle.textContent = "Featured Posts";
        resultsContainer.innerHTML = `<ul>
        <li>
            <a href="#">
                <img src="Aster Hospital.png" target="_blank"><sup><sup><sup><sup>Aster</sup></sup></sup></sup>
            </a>
        </li>
